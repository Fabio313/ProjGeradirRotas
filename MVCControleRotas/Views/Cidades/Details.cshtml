@using Model
@using Model.Services
@model Model.Cidade

@{
    ViewData["Title"] = "Details";
}

<h1>Detalhes</h1>

<div>
    <h4>Cidade</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.UF)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UF)
        </dd>
         <dt class = "col-sm-2">
            <b>Equipes: </b>
        </dt>
        @foreach(Equipe equipe in await ConsultaService.GetEquipesCidades(Model.Id))
            {
                <dd class = "col-sm-10">
                <label>@equipe.Nome</label>
                </dd>
            }
    </dl>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>
